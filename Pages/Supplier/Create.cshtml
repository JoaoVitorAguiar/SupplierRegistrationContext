@page
@model SupplierRegistrationContext.Pages.Supplier.CreateModel


<h4>Cadastro de Fornecedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SupplierViewModel.Name" class="control-label">Nome</label>
                <input asp-for="SupplierViewModel.Name" class="form-control" />
                <span asp-validation-for="SupplierViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierViewModel.CNPJ" class="control-label"></label>
                <input class="form-control" type="text" id="cnpj" onkeyup="formataValorCnpj(this)"
                       onpaste="TrataPaste(this, event, 'cnpj')" maxlength=18 asp-for="SupplierViewModel.CNPJ" class="form-control" />
                <span asp-validation-for="SupplierViewModel.CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierViewModel.CEP" class="control-label"></label>
                <input type="text" maxlength="9" onkeyup="handleZipCode(event)" asp-for="SupplierViewModel.CEP" class="form-control" />
                <span asp-validation-for="SupplierViewModel.CEP" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SelectedSpecialtyId" class="control-label">Especialidade</label>
                <select asp-for="SelectedSpecialtyId" class="form-control">
                    @foreach (var specialty in Model.Specialties)
                    {
                        <option value="@specialty.Id">@specialty.Name</option>
                    }
                </select>

                <span asp-validation-for="SelectedSpecialtyId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
