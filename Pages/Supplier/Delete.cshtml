@page
@model SupplierRegistrationContext.Pages.Supplier.DeleteModel

<h3>Tem certeza que deseja excluir esse fornecedor?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier.CNPJ)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.CNPJ)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier.CEP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.CEP)
        </dd>
        <dt class="col-sm-2">
            Endereço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.Address)
        </dd>
        <dt class="col-sm-2">
            Especialidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.Specialty.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Supplier.Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-page="./List">Voltar</a>
    </form>
</div>
