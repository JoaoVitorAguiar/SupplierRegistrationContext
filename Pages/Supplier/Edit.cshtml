@page
@model SupplierRegistrationContext.Pages.Supplier.EditModel

<h4>Fornecedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Supplier.Id" />
            <div class="form-group">
                <label asp-for="Supplier.Name" class="control-label">Nome</label>
                <input asp-for="Supplier.Name" class="form-control" />
                <span asp-validation-for="Supplier.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.CNPJ" class="control-label"></label>
                <input asp-for="Supplier.CNPJ" class="form-control" />
                <span asp-validation-for="Supplier.CNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.CEP" class="control-label"></label>
                <input asp-for="Supplier.CEP" class="form-control" />
                <span asp-validation-for="Supplier.CEP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier.Address" class="control-label">Endereço</label>
                <input asp-for="Supplier.Address" class="form-control" />
                <span asp-validation-for="Supplier.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedSpecialtyId" class="control-label">Especialidade</label>
                <select asp-for="SelectedSpecialtyId" class="form-control">
                    @foreach (var specialty in Model.Specialties)
                    {
                        <option value="@specialty.Id">@specialty.Name</option>
                    }
                </select>

                <span asp-validation-for="SelectedSpecialtyId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./List">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
